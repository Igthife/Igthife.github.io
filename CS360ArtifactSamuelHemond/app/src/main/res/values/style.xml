<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonDelete" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/red_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
        <item name="cornerRadius">50dp</item>
    </style>
    <style name="buttonGeneral" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">50dp</item>
    </style>
    <style name="buttonMenu" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">50dp</item>
    </style>
    <style name="titleMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>
    <style name="goalWeight" parent="ThemeOverlay.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <style name="scrollMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <style name="titleText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="invertButtonColor" parent="TextAppearance.AppCompat">
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@color/light_primary_color</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">3dp</item>
    </style>
    <style name="windowStyle" parent="TextAppearance.AppCompat">
        <item name="cardBackgroundColor">?colorContainer</item>
    </style>

</resources>