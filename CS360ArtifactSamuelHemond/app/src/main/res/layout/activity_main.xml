<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/goalWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weightTable"
        android:text="@string/goal_weight"
        style="@style/goalWeight" />

    <Button
        android:id="@+id/permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="getSmsPermission"
        style="@style/buttonGeneral"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weightTable"
        android:text="@string/contact_me"
        android:textSize="11sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weightTable"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/recycle_item" />

    <Button
        android:id="@+id/dailyWeightInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="openDailyWeightActivity"
        style="@style/buttonGeneral"
        app:layout_constraintTop_toBottomOf="@+id/weightTable"
        app:layout_constraintRight_toLeftOf="@+id/goalWeightInputButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirm_date_weight" />

    <Button
        android:id="@+id/goalWeightInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="openGoalWeightActivity"
        style="@style/buttonGeneral"
        app:layout_constraintTop_toBottomOf="@+id/weightTable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dailyWeightInputButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirm_goal_weight" />


</androidx.constraintlayout.widget.ConstraintLayout>