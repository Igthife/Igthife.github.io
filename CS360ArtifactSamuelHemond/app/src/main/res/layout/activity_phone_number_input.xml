<?xml version="1.0" encoding="utf-8"?>
<!--UI for phoneNumberInputActivity-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    tools:context=".PhoneNumberActivity">

    <!--Card view for view design-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/windowStyle"
        app:contentPadding="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        android:layout_marginTop="100dp">

        <!--Constrained layout to hold text elements-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Goal Weight title display-->
            <TextView
                android:id="@+id/welcomeTextPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_title"
                style="@style/titleText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Prompt user for phone number-->
            <TextView
                android:id="@+id/numberPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_prompt"
                style="@style/editTitleStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcomeTextPhoneNumber"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="100dp"/>

            <!--Record user phone number-->
            <EditText
                android:id="@+id/numberInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:background="@drawable/custom_edittext"
                android:padding="5dp"
                style="@style/editTitleStyle"
                app:layout_constraintLeft_toLeftOf="@id/numberPrompt"
                app:layout_constraintRight_toRightOf="@id/numberPrompt"
                app:layout_constraintTop_toBottomOf="@id/numberPrompt"
                android:hint="@string/phone_number_hint"
                android:autofillHints="no" />

            <!--Submit user phone number-->
            <Button
                android:id="@+id/phoneNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_phone_number"
                android:onClick="savePhoneNumber"
                style="@style/buttonGeneral"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberInput"
                android:layout_margin="15dp"/>

            <!--Display current phone number of present-->
            <TextView
                android:id="@+id/currentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_phone_number"
                style="@style/editTitleStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberButton"
                android:layout_marginTop="50dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>